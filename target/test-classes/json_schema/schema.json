{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "name": { "type": "string" },
      "map": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "required": ["id"],
    "anyOf": [
      { "required": ["name"] },
      { "required": ["map"] }
    ]
  }
}
